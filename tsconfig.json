{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src",
        "src/.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}